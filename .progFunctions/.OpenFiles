#!/bin/bash

if [[ $# -eq 0 ]]; then
    echo "Usage: openfile <extension1> <extension2> ..."
    exit 1
fi

files=""
for ext in "$@"; do
    found_files=$(find . -type f -name "*.$ext" 2>/dev/null)

    if [[ -n $found_files ]]; then
        files+="$found_files"$'\n'
    else
        echo "No files found with extension: .$ext"
    fi
done

if [[ -n $files ]]; then
    code "$files"
else
    echo "No files found with the specified extensions."
fi
