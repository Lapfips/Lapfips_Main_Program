#!/bin/bash

cd GitRepositories/

repo_path=$1
repo_url=$2
repo_name=$(basename "$repo_path")

if [[ ! -d $repo_name ]]; then
    git clone "$repo_url/$repo_path.git"
fi

cd "$repo_name" || exit

git pull origin $(git branch --show-current)

if [[ -n $(git status --porcelain) ]]; then
    git add .
    git commit -m "Auto-update"
    git push origin $(git branch --show-current)
fi

cd
