#!/bin/bash

cd GitRepositories/

repo_path=$1
repo_url=$2
MESS=$3
repo_name=$(basename "$repo_path")

if [[ ! -d $repo_name ]]; then
    git clone "$repo_url/$repo_path.git"
fi

cd "$repo_name" || exit

git pull

if [[ -n $(git status --porcelain) ]]; then
    git add .
    echo $MESS
    if [[ $MESS != "auto" ]]; then
        read -p "Your commit message for $repo_name repository : " MESS
    fi
    echo $MESS
    git commit -m "$MESS"
    git push
fi

cd
